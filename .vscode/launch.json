{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Dev Server TSX",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "dev"]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Execute JavaScript Files in Test Directory",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "args": ["${workspaceFolder}/test/*.js"],
            "runtimeArgs": ["--test"]
        }
    ]
}